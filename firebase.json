{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/products",
        "destination": "/index.html"
      },
      {
        "source": "/product/*",
        "destination": "/index.html"
      },
      {
        "source": "/about",
        "destination": "/index.html"
      },
      {
        "source": "/faq",
        "destination": "/index.html"
      },
      {
        "source": "/privacy",
        "destination": "/index.html"
      }
    ]
  }
}
